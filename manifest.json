{
  "manifest_version": 3,

  "name": "Translate Messages Hamal",
  "description": "Translate hamal messages to all users",
  "version": "1.0",

  "icons": {
    "128": "./icons/il-square-128.png",
    "48": "./icons/il-square-48.png",
    "16": "./icons/il-square-16.png"
  },

  "action": {
    "default_icon": "./icons/il-square-16.png",
    "default_popup": "index.html"
  },

  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self';"
  }
}